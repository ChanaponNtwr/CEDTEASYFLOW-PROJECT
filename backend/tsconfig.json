{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "types": ["node"],
    "outDir": "dist",       // <--- เพิ่มบรรทัดนี้
    "rootDir": "src"        // <--- แนะนำให้ตั้งเพื่อให้โครงสร้างเหมือนเดิม
  },
  "include": ["src"]
}
